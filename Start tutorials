install docker-compose

$ sudo -i
# curl -L "https://github.com/docker/compose/releases/download/1.12.0/docker-compose-$(uname -s)-$(uname -m)" -o /usr/local/bin/docker-compose

# chmod +x /usr/local/bin/docker-compose
# exit
$ sudo docker-compose -v
docker-compose version 1.12.0, build b31ff33

###Procfile
[mysite].wsgi

sudo docker-compose build

docker-compose up
docker ps
### enter docker command prompt
docker exec -i -t heroku_web_1 bash

###
docker-compose stop

sudo chown -R $USER:$USER .

sudo docker-compose run [compose.yml_service like djangogirls] django-admin.py startproject mysite .

heroku create

git remote add heroku [URL:https://git.heroku.com/peaceful-brushlands-43956.git]


git push heroku master

heroku ps:scale web=1

heroku open

heroku run python manage.py migrate

heroku run pyrhon manage.py createsuperuser
